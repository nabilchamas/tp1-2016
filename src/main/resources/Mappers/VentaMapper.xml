<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
        'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='Mappers.VentaMapper'>
    <!-- Instead of referencing Fully Qualified Class Names we can register Aliases in mybatis-config.xml and use Alias names. -->
    <resultMap type='Venta' id='VentaResult'>
        <id property='id' column='id'/>
        <association property="cliente" column="cliente_id"
                     resultMap="ClienteResult"/>

    </resultMap>
    <resultMap id="ClienteResult" type="Cliente">
        <id property="id" column="cliente_id"/>
        <result property='nombre' column='cliente_name'/>
    </resultMap>

    <select id='getVentaById' parameterType='integer' resultMap='VentaResult'>
        SELECT
        venta.id,
        cliente_id,
        cliente.nombre cliente_name
        FROM venta  left outer JOIN  cliente On cliente.id = venta.cliente_id
        WHERE venta.id = #{id}
    </select>
    <select id='getAllVentas'   resultMap='VentaResult'>
        SELECT * FROM venta  left outer JOIN  cliente On cliente.id = venta.cliente_id
    </select>
    <insert id='insertVenta' parameterType='Venta' useGeneratedKeys='true' keyProperty='id'>
        INSERT INTO detalle_venta ( cliente_id)
        VALUES(#{cliente_id})
    </insert>
    <update id='updateVenta' parameterType='Venta'>
        UPDATE venta
        SET
        cliente_id = #{cliente.id}
        WHERE ID = #{id}
    </update>
    <delete id='deleteVenta' parameterType='integer'>
        DELETE FROM venta WHERE id = #{id}
    </delete>
</mapper>
