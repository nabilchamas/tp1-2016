<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
        'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='Mappers.ProveedorMapper'>
    <select id='getProveedorById' parameterType='long' resultType='JPA.ProveedorEntity'>
        SELECT
        id as id,
        nombre as nombre ,
        saldo as saldo
        FROM cliente
        WHERE id = #{id}
    </select>
    <!-- Instead of referencing Fully Qualified Class Names we can register Aliases in mybatis-config.xml and use Alias names. -->
    <resultMap type='ProveedorEntity' id='ProveedorResult'>
        <id property='id' column='id'/>
        <result property='nombre' column='nombre'/>
        <result property='saldo' column='saldo'/>

    </resultMap>
    <select id='getAllProveedores' resultMap='ProveedorResult'>
        SELECT * FROM cliente
    </select>
    <insert id='insertProveedor' parameterType='Proveedor' useGeneratedKeys='true' keyProperty='id'>
        INSERT INTO USER(nombre, saldo)
        VALUES(#{nombre}, #{saldo})
    </insert>
    <update id='updateProveedor' parameterType='Proveedor'>
        UPDATE cliente
        SET
        NOMBRE= #{nombre},
        SALDO = #{saldo},

        WHERE ID = #{id}
    </update>
    <delete id='deleteProveedor' parameterType='long'>
        DELETE FROM USER WHERE id = #{id
    </delete>
</mapper>
